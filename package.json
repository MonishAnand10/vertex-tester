{
  "name": "vertex-tester",
  "displayName": "Vertex Tester",
  "description": "Multi-language AI-powered unit test generation extension that leverages Google Gemini to create comprehensive test cases for Python and Java codebases.",
  "version": "1.1.0",
  "author": "Dhulipala Siva Tejaswi, Kaushal Girish & Monish Anand",
  "publisher": "nuggets-vertex-tester-team",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vertex-tester.generateTests",
        "title": "Generate Unit Tests with Gemini"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vertex-tester.generateTests",
          "when": "resourceExtname == .py || resourceExtname == .java || resourceExtname == .js || resourceExtname == .ts",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "vertex-tester.generateTests",
          "when": "resourceExtname == .java || resourceExtname == .py || resourceExtname == .js || resourceExtname == .ts",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
